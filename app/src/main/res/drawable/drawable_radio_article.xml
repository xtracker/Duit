<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/nav_item_unchecked"></stroke>
                    <size android:width= "22dip"
                        android:height= "22dip" />
                    <corners android:radius="2dip" />
                </shape>
            </item>
            <item android:top="-8dip" android:left="5dip" android:right="5dip">
                <shape android:shape="line" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/nav_item_unchecked"></stroke>
                </shape>
            </item>

            <item android:left="5dip" android:right="5dip">
                <shape android:shape="line" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/nav_item_unchecked"></stroke>
                </shape>
            </item>
            <item android:top="8dip" android:left="5dip" android:right="10dip">
                <shape android:shape="line" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/nav_item_unchecked"></stroke>
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:useLevel="false">
                    <solid android:width="1.5dip" android:color="@color/nav_item_checked"></solid>
                    <size android:width= "22dip"
                        android:height= "22dip" />
                    <corners android:radius="2dip" />
                </shape>
            </item>
            <item android:top="-8dip" android:left="5dip" android:right="5dip">
                <shape android:shape="line" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/drawer_item_text"></stroke>
                </shape>
            </item>

            <item android:left="5dip" android:right="5dip">
                <shape android:shape="line" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/drawer_item_text"></stroke>
                </shape>
            </item>
            <item android:top="8dip" android:left="5dip" android:right="10dip">
                <shape android:shape="line" android:useLevel="false">
                    <stroke android:width="1.5dip" android:color="@color/drawer_item_text"></stroke>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>